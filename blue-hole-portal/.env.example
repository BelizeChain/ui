# BelizeChain Blue Hole Portal - Environment Configuration
# Government & Validator Dashboard
# Copy this file to .env.local and configure for your environment

# ============================================================================
# BLOCKCHAIN CONNECTION
# ============================================================================

# BelizeChain node WebSocket endpoint (government-grade connection)
# Development: ws://127.0.0.1:9944
# Production: wss://gov-rpc.belizechain.bz (load-balanced, high-availability)
NEXT_PUBLIC_NODE_ENDPOINT=ws://127.0.0.1:9944

# Network identification
NEXT_PUBLIC_NETWORK_NAME=BelizeChain
NEXT_PUBLIC_CHAIN_ID=belizechain

# ============================================================================
# PYTHON SERVICE ENDPOINTS
# ============================================================================

# Nawal federated learning monitoring API
# Dashboard: validator PoUW performance, model quality metrics
NEXT_PUBLIC_NAWAL_ENDPOINT=http://localhost:8001

# Kinich quantum computing monitoring API
# Dashboard: PQW verification, quantum job queue status
NEXT_PUBLIC_KINICH_ENDPOINT=http://localhost:8002

# Pakit storage monitoring API
# Dashboard: IPFS/Arweave health, document proof verification
NEXT_PUBLIC_PAKIT_ENDPOINT=http://localhost:8003

# ============================================================================
# GOVERNMENT FEATURES
# ============================================================================

# Multi-signature treasury requirements
NEXT_PUBLIC_TREASURY_REQUIRED_SIGNATURES=4
NEXT_PUBLIC_TREASURY_TOTAL_SIGNERS=7

# Council voting thresholds
NEXT_PUBLIC_COUNCIL_APPROVAL_THRESHOLD=0.51

# Compliance monitoring
NEXT_PUBLIC_ENABLE_KYC_DASHBOARD=true
NEXT_PUBLIC_ENABLE_AML_MONITORING=true

# ============================================================================
# VALIDATOR MONITORING
# ============================================================================

# Staking metrics refresh interval (seconds)
NEXT_PUBLIC_STAKING_REFRESH_INTERVAL=30

# Performance alert thresholds
NEXT_PUBLIC_MIN_UPTIME_PERCENT=95
NEXT_PUBLIC_MAX_MISSED_BLOCKS=10

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable advanced government features
NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES=true

# Enable development tools
NEXT_PUBLIC_DEV_MODE=true

# Enable testnet features
NEXT_PUBLIC_TESTNET_MODE=true

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Default language (en, es, kr)
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Enable multi-language support
NEXT_PUBLIC_I18N_ENABLED=true

# Dashboard refresh interval (seconds)
NEXT_PUBLIC_DASHBOARD_REFRESH=60

# Cache TTL for blockchain queries (milliseconds)
NEXT_PUBLIC_CACHE_TTL=30000

# ============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# ============================================================================

# Block explorer URL
# NEXT_PUBLIC_EXPLORER_URL=https://explorer.belizechain.bz

# Analytics tracking
# NEXT_PUBLIC_ANALYTICS_ID=

# Sentry error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Grafana dashboard URL (for advanced metrics)
# NEXT_PUBLIC_GRAFANA_URL=http://localhost:3000

# Prometheus endpoint (for metrics export)
# NEXT_PUBLIC_PROMETHEUS_URL=http://localhost:9090

# ============================================================================
# SECURITY
# ============================================================================

# Government-only access (requires specific account types)
NEXT_PUBLIC_REQUIRE_GOVERNMENT_AUTH=true

# Audit logging (all actions logged for compliance)
NEXT_PUBLIC_ENABLE_AUDIT_LOGGING=true

# Session timeout (in minutes)
NEXT_PUBLIC_SESSION_TIMEOUT=15

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Show console logs
NEXT_PUBLIC_CONSOLE_LOGS=true

# Enable React Query DevTools
NEXT_PUBLIC_REACT_QUERY_DEVTOOLS=true

# Enable performance profiling
NEXT_PUBLIC_ENABLE_PROFILING=true
